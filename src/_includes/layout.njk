<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link rel="icon" href="/favicon.ico" sizes="any">
  <link rel="apple-touch-icon" href="{{ 180 | appleTouchIconUrl }}">
  <title>{{ title or "Pasta Shapes" }}</title>

  {% if description %}
    <meta name="description" content="{{ description }}" />
  {% endif %}

  <link rel="stylesheet" href="/css/styles.css" />
  <script src="/js/scripts.js" defer></script>
</head>

<body>
  <a class="skip" href="#main">Skip to content</a>

  <header class="topbar">
    <div class="topbar-inner">
      <a class="brand" href="/">Pasta Shapes</a>
      <nav class="nav" aria-label="Primary">
        <a href="/" {% if page and page.url == "/" %}aria-current="page"{% endif %}>Search</a>
        <a href="/identify/" {% if page and page.url and page.url.startsWith("/identify") %}aria-current="page"{% endif %}>Identify</a>
      </nav>
    </div>
  </header>

  <main id="main" class="container">
    {{ content | safe }}
  </main>
</body>
</html>
