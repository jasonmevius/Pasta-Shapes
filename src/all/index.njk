{# =============================================================================
  src/all/index.njk

  Fix: Thumbnails were blank because the dataset does not include ThumbUrl/thumbUrl,
  so the template always fell back to the placeholder (confirmed in rendered HTML).

  This version computes thumbnail URLs using the same pattern as the Search page:
  {{ paths.imagekitBase }}/pasta/thumbs/{{ slug }}.png?tr=w-56,h-56,f-auto,q-50

  Columns:
  - Thumb
  - Name (sortable)
  - Category (sortable)
  - Detail (link)
============================================================================= #}

<header class="page-header">
  <h1>All Pasta Shapes</h1>
  <p class="page-subtitle">
    Browse {{ pasta.length }} pasta shapes. Use the filters to narrow results.
  </p>
</header>

<section class="table-tools" aria-label="Table filters">
  <div class="table-tools__row">
    <div class="field">
      <label class="field__label" for="allPastaSearch">Search</label>
      <input
        id="allPastaSearch"
        class="field__input"
        type="search"
        placeholder="Type a name or categoryâ€¦"
        autocomplete="off"
      />
      <p class="field__hint">Filters across Name and Category.</p>
    </div>

    <div class="field">
      <label class="field__label" for="allPastaCategory">Category</label>
      <select id="allPastaCategory" class="field__select">
        <option value="">All categories</option>
      </select>
      <p class="field__hint">Quickly isolate a pasta family.</p>
    </div>

    <div class="table-meta" aria-live="polite">
      <div class="table-meta__count">
        Showing <strong id="allPastaVisibleCount">{{ pasta.length }}</strong> of <strong>{{ pasta.length }}</strong>
      </div>

      <button id="allPastaClear" class="btn btn--secondary" type="button">
        Clear filters
      </button>
    </div>
  </div>
</section>

<section class="table-wrap" aria-label="All pasta shapes table">
  <table id="allPastaTable" class="data-table data-table--all">
    <caption class="sr-only">All pasta shapes with sortable columns</caption>

    <thead>
      <tr>
        <th scope="col" class="data-table__thumb">Thumb</th>

        <th scope="col"
            class="data-table__sortable data-table__left"
            data-sort-key="name"
            aria-sort="none">
          Name <span class="sort-indicator" aria-hidden="true"></span>
        </th>

        <th scope="col"
            class="data-table__sortable data-table__left"
            data-sort-key="category"
            aria-sort="none">
          Category <span class="sort-indicator" aria-hidden="true"></span>
        </th>

        <th scope="col" class="data-table__left">Detail</th>
      </tr>
    </thead>

    <tbody>
      {% for item in pasta %}

        {# Prefer an explicit slug if your data provides it; otherwise generate from ShapeName #}
        {% set slugVal = item.slug %}
        {% if not slugVal %}
          {% set slugVal = item.ShapeName | slug %}
        {% endif %}

        {# Detail URL #}
        {% set detailUrl = "/pasta/" ~ slugVal ~ "/" %}

        {# Thumbnail URL - mimic Search page pattern exactly #}
        {% set thumbUrl = paths.imagekitBase ~ "/pasta/thumbs/" ~ slugVal ~ ".png" %}
        {% set thumbUrlTransformed = thumbUrl ~ "?tr=w-56,h-56,f-auto,q-50" %}

        <tr
          class="data-row"
          data-name="{{ (item.ShapeName or '') | lower | escape }}"
          data-category="{{ (item.Category or '') | lower | escape }}"
        >
          <td class="data-table__thumb">
            <span class="thumb" aria-hidden="true">
              <img
                src="{{ thumbUrlTransformed }}"
                alt=""
                loading="lazy"
                decoding="async"
                width="56"
                height="56"
                {# If a thumb is missing on ImageKit, this will swap in the placeholder styling #}
                onerror="this.closest('.thumb')?.classList.add('thumb--placeholder'); this.remove();"
              />
            </span>
          </td>

          <th scope="row" class="data-table__name">
            <a href="{{ detailUrl }}">{{ item.ShapeName }}</a>
          </th>

          <td class="cell-category">{{ item.Category or "" }}</td>

          <td class="data-table__detail">
            <a href="{{ detailUrl }}">View</a>
          </td>
        </tr>

      {% endfor %}
    </tbody>
  </table>
</section>
