title: Pasta Shapes
layout: layout.njk
---

<h1>Pasta Shapes</h1>
<p>Loaded {{ pasta.length }} pasta shapes.</p>

<section aria-labelledby="search-title">
  <h2 id="search-title">Search by name</h2>

  <form id="pasta-search-form" action="/" method="get" autocomplete="off">
    <label for="pasta-q">Pasta name</label><br>
    <input
      id="pasta-q"
      name="q"
      type="search"
      placeholder="e.g., capellini, angel hair, bucatini"
      spellcheck="false"
      autocapitalize="none"
      autocomplete="off"
      inputmode="search"
    >
    <button type="submit">Search</button>
  </form>

  <p id="pasta-search-status" aria-live="polite" style="min-height: 1.2em; margin-top: 0.5rem;"></p>

  <ul id="pasta-search-suggestions" aria-label="Search suggestions"></ul>
</section>

<hr>

<p><a href="/identify/">Or identify by shape</a></p>

<details>
  <summary>Browse all pasta shapes (A-Z)</summary>
  <ul>
    {% for item in pasta %}
      <li>
        <a href="/pasta/{{ item.ShapeName | slug }}/">{{ item.ShapeName }}</a>
        {% if item.Category %} - <em>{{ item.Category }}</em>{% endif %}
      </li>
    {% endfor %}
  </ul>
</details>
